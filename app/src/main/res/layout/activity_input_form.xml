<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputFormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entry Name"
            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/input_form_entry_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. Walgreens"
            android:inputType="textCapWords"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entry Label"
            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold"/>
        <AutoCompleteTextView
            android:id="@+id/input_form_entry_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. Food"
            android:inputType="textCapWords"
            android:completionThreshold="0"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total"
            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"/>
            <EditText
                android:id="@+id/input_form_total_dollars_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Dollars"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."/>
            <EditText
                android:id="@+id/input_form_total_cents_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Cents"
                android:maxLength="2"
                android:inputType="number"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Month/Year"
            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/input_form_month_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:hint="Month"
                android:maxLength="2"
                android:inputType="number"/>
            <EditText
                android:id="@+id/input_form_year_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:hint="Year"
                android:maxLength="4"
                android:inputType="number"/>
        </LinearLayout>
        <android.support.design.button.MaterialButton
            android:id="@+id/input_form_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Submit"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>