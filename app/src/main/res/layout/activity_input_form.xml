<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputFormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total*"
            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"/>
            <EditText
                android:id="@+id/input_form_total_dollars_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Dollars"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."/>
            <EditText
                android:id="@+id/input_form_total_cents_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Cents"
                android:maxLength="2"
                android:inputType="number"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Month/Year*"
            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/input_form_month_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:hint="Month"
                android:maxLength="2"
                android:inputType="number"/>
            <EditText
                android:id="@+id/input_form_year_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:hint="Year"
                android:maxLength="4"
                android:inputType="number"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tax"
                android:textSize="24sp"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"/>
            <Switch
                android:id="@+id/input_form_tax_switch"
                android:layout_gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RadioGroup
            android:id="@+id/input_form_tax_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <RadioButton
                android:id="@+id/input_form_tax_included"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Included in Total"/>
            <RadioButton
                android:id="@+id/input_form_tax_excluded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excluded from Total"/>
        </RadioGroup>
        <LinearLayout
            android:id="@+id/input_form_tax_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$" />
            <EditText
                android:id="@+id/input_form_tax_dollars_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Dollars"
                android:inputType="number" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="." />
            <EditText
                android:id="@+id/input_form_tax_cents_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Cents"
                android:maxLength="2"
                android:inputType="number" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tips"
                android:textSize="24sp"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"/>
            <Switch
                android:id="@+id/input_form_tip_switch"
                android:layout_gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RadioGroup
            android:id="@+id/input_form_tip_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <RadioButton
                android:id="@+id/input_form_tip_included"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Included in Total"/>
            <RadioButton
                android:id="@+id/input_form_tip_excluded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excluded from Total"/>
        </RadioGroup>
        <LinearLayout
            android:id="@+id/input_form_tip_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$" />
            <EditText
                android:id="@+id/input_form_tip_dollars_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Dollars"
                android:inputType="number" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="." />
            <EditText
                android:id="@+id/input_form_tip_cents_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Cents"
                android:maxLength="2"
                android:inputType="number" />
        </LinearLayout>
        <android.support.design.button.MaterialButton
            android:id="@+id/input_form_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Submit"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>